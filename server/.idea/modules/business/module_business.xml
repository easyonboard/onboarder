<?xml version="1.0" encoding="UTF-8"?>
<project name="module_business" default="compile.module.business">
  <dirname property="module.business.basedir" file="${ant.file.module_business}"/>
  
  <property name="module.jdk.home.business" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.business" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.business" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.business" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="business.output.dir" value="${module.business.basedir}/../../../out/production/business"/>
  <property name="business.testoutput.dir" value="${module.business.basedir}/../../../out/test/business"/>
  
  <path id="business.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="business.module.production.classpath">
    <path refid="${module.jdk.classpath.business}"/>
  </path>
  
  <path id="business.runtime.production.module.classpath">
    <pathelement location="${business.output.dir}"/>
  </path>
  
  <path id="business.module.classpath">
    <path refid="${module.jdk.classpath.business}"/>
    <pathelement location="${business.output.dir}"/>
  </path>
  
  <path id="business.runtime.module.classpath">
    <pathelement location="${business.testoutput.dir}"/>
    <pathelement location="${business.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.business">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.business">
    <patternset refid="excluded.from.module.business"/>
  </patternset>
  
  
  <target name="compile.module.business" depends="compile.module.business.production,compile.module.business.tests" description="Compile module business"/>
  
  <target name="compile.module.business.production" depends="register.custom.compilers" description="Compile module business; production classes"/>
  
  <target name="compile.module.business.tests" depends="register.custom.compilers,compile.module.business.production" description="compile module business; test classes" unless="skip.tests"/>
  
  <target name="clean.module.business" description="cleanup module">
    <delete dir="${business.output.dir}"/>
    <delete dir="${business.testoutput.dir}"/>
  </target>
</project>