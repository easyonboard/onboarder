<?xml version="1.0" encoding="UTF-8"?>
<project name="module_persistence" default="compile.module.persistence">
  <dirname property="module.persistence.basedir" file="${ant.file.module_persistence}"/>
  
  <property name="module.jdk.home.persistence" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.persistence" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.persistence" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.persistence" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="persistence.output.dir" value="${module.persistence.basedir}/../../../out/production/persistence"/>
  <property name="persistence.testoutput.dir" value="${module.persistence.basedir}/../../../out/test/persistence"/>
  
  <path id="persistence.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="persistence.module.production.classpath">
    <path refid="${module.jdk.classpath.persistence}"/>
  </path>
  
  <path id="persistence.runtime.production.module.classpath">
    <pathelement location="${persistence.output.dir}"/>
  </path>
  
  <path id="persistence.module.classpath">
    <path refid="${module.jdk.classpath.persistence}"/>
    <pathelement location="${persistence.output.dir}"/>
  </path>
  
  <path id="persistence.runtime.module.classpath">
    <pathelement location="${persistence.testoutput.dir}"/>
    <pathelement location="${persistence.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.persistence">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.persistence">
    <patternset refid="excluded.from.module.persistence"/>
  </patternset>
  
  
  <target name="compile.module.persistence" depends="compile.module.persistence.production,compile.module.persistence.tests" description="Compile module persistence"/>
  
  <target name="compile.module.persistence.production" depends="register.custom.compilers" description="Compile module persistence; production classes"/>
  
  <target name="compile.module.persistence.tests" depends="register.custom.compilers,compile.module.persistence.production" description="compile module persistence; test classes" unless="skip.tests"/>
  
  <target name="clean.module.persistence" description="cleanup module">
    <delete dir="${persistence.output.dir}"/>
    <delete dir="${persistence.testoutput.dir}"/>
  </target>
</project>